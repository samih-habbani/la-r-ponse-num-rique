{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="col-md-8 mx-auto mt-5">

        <div class="form-shadow-black relative row col-10 col-sm-10 col-md-6 mx-auto justify-content-center align-items-centerwhite smallBorderRadius p-0 my-5">
            <div class="form-circle"> </div>
            {{ form_start(registrationForm, {"attr": {"class": "col-md-12 row px-5 py-5 justify-content-center" } }) }}
                <div class="col-md-12">
                    <h1 class="text-less-grey h3 mb-3 font-weight-normal text-center">Inscription</h1>
                </div>

                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.dateOfBirth) }}
                        {{ form_row(registrationForm.sexe) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn">Register</button>

                <div class="d-flex justify-content-center mb-5">
                    <button type="submit" class="text-less-grey btn btn-secondary col-md-6 buttonBorderRadius">Envoyer</button>
                </div>

            {{ form_end(registrationForm) }}

        </div>


    </div>

{% endblock %}
